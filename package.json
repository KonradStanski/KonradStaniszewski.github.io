{
    "name": "nextjs-typescript-mdx-blog",
    "author": "@erikdstock",
    "license": "MIT",
    "version": "1.0.0",
    "scripts": {
        "dev": "node --inspect ./node_modules/next/dist/bin/next",
        "build": "next build",
        "start": "next start",
        "type-check": "tsc --pretty --noEmit",
        "format": "prettier --write",
        "format-all": "prettier --write .",
        "lint": "eslint --ext ts --ext tsx --ext js",
        "lint-all": "eslint --ext ts --ext tsx --ext js .",
        "test-all": "yarn lint && yarn type-check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn run type-check"
        }
    },
    "lint-staged": {
        "*.@(ts|tsx)": [
            "yarn lint",
            "yarn format"
        ]
    },
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@tailwindcss/typography": "^0.4.0",
        "@types/react-pdf": "^5.0.5",
        "chart.js": "^3.4.1",
        "date-fns": "^2.19.0",
        "gray-matter": "^4.0.2",
        "mdx-prism": "^0.3.3",
        "next": "^10.2.0",
        "next-mdx-remote": "^3.0.1",
        "next-themes": "^0.0.14",
        "react": "^17.0.2",
        "react-chartjs-2": "^3.0.4",
        "react-dom": "^17.0.2",
        "react-dropzone": "^11.3.4",
        "react-p5": "^1.3.19",
        "react-pdf": "^5.3.2",
        "rehype-autolink-headings": "^5.0.1",
        "rehype-slug": "^4.0.1",
        "remark-code-titles": "^0.1.1",
        "tailwindcss-glow": "^2.0.0-alpha.1"
    },
    "devDependencies": {
        "@testing-library/react": "^11.2.5",
        "@types/gtag.js": "^0.0.5",
        "@types/node": "^14.14.25",
        "@types/react": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^4.14.2",
        "@typescript-eslint/parser": "^4.14.2",
        "autoprefixer": "^10.0.4",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.3",
        "identity-obj-proxy": "^3.0.0",
        "lint-staged": "^10.0.10",
        "postcss": "^8.1.10",
        "prettier": "^2.0.2",
        "rehype": "^11.0.0",
        "tailwindcss": "^2.1.4",
        "typescript": "^4.1.3"
    }
}
